# PostgreSQL Database Configuration
POSTGRES_USER=caramel
POSTGRES_PASSWORD=caramel
POSTGRES_DB=caramel_db

# Redis Configuration
REDIS_PASSWORD=caramel_redis

# Discord Bot Configuration
# Get these values from https://discord.com/developers/applications
Discord__Token=
Discord__PublicKey=

# Twitch Integration Configuration (Caramel.Twitch)
# Get these values from https://dev.twitch.tv/console/apps
TwitchConfig__ClientId=
TwitchConfig__ClientSecret=
# Access/refresh tokens are issued by the OAuth flow.
# Leave blank for first run; paste values to persist across restarts.
TwitchConfig__AccessToken=
TwitchConfig__RefreshToken=
TwitchConfig__BotUserId=
TwitchConfig__ChannelIds=
TwitchConfig__OAuthCallbackUrl=http://localhost:8080/auth/callback
# Use a secure random string for session encryption
TwitchConfig__EncryptionKey=

# Optional Twitch notification config (used by Caramel.Service)
Twitch__AccessToken=
Twitch__BotUserId=

# gRPC Client Configuration (used by API, Discord, and Twitch to reach Caramel.Service)
# For Docker: use 'caramel-service' as host (service name from compose.yaml)
# For local development: use 'localhost'
GrpcHostConfig__Host=caramel-service
GrpcHostConfig__Port=5270
GrpcHostConfig__UseHttps=false
GrpcHostConfig__ApiToken=dev-api-token
GrpcHostConfig__ValidateSslCertificate=false

# Database Connection Strings
# For Docker: use 'pgsql' as host (service name from compose.yaml)
# For local development: use 'localhost' (ports: 5433 for Postgres, 6380 for Redis)
ConnectionStrings__Caramel=Host=pgsql;Database=caramel_db;Username=caramel;Password=caramel
ConnectionStrings__Quartz=Host=pgsql;Database=caramel_db;Username=caramel;Password=caramel

# Redis Connection String
ConnectionStrings__Redis=redis:6379,password=caramel_redis

# AI Configuration
Caramel__AI__ModelId=
Caramel__AI__Endpoint=
Caramel__AI__ApiKey=
