# PostgreSQL Database Configuration
POSTGRES_USER=caramel
POSTGRES_PASSWORD=caramel
POSTGRES_DB=caramel_db

# Discord Bot Configuration
# Get these values from https://discord.com/developers/applications
Discord__Token=your_discord_bot_token_here
Discord__PublicKey=your_discord_public_key_here

# Twitch Integration Configuration
# Get these values from https://dev.twitch.tv/console/apps
Twitch__ClientId=your_twitch_client_id_here
Twitch__ClientSecret=your_twitch_client_secret_here
Twitch__OAuthCallbackUrl=http://localhost:5146/auth/callback
# Use a secure random string for session encryption
Twitch__EncryptionKey=your_secure_32_byte_base64_key_here

# Database Connection String
# For Docker: use 'pgsql' as host (service name from compose.yaml)
# For local development: use 'localhost'
ConnectionStrings__Caramel="Host=pgsql;Database=caramel_db;Username=caramel;Password=caramel"
ConnectionStrings__Quartz="Host=pgsql;Database=caramel_db;Username=caramel;Password=caramel"

Caramel__AI__ModelId=your_model_id_here
Caramel__AI__Endpoint=your_model_endpoint_here
Caramel__AI__ApiKey=your_model_api_key_here

