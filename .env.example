# PostgreSQL Database Configuration (External Service)
POSTGRES_USER=caramel
POSTGRES_PASSWORD=caramel
POSTGRES_DB=caramel_db

# Redis Configuration (External Service)
REDIS_PASSWORD=caramel_redis

# Discord Bot Configuration
# Get these values from https://discord.com/developers/applications
CARAMEL_DISCORD_TOKEN=
CARAMEL_DISCORD_PUBLICKEY=

# Twitch Integration Configuration (Caramel.Twitch)
# Get these values from https://dev.twitch.tv/console/apps
CARAMEL_TWITCH_CLIENTID=
CARAMEL_TWITCH_CLIENTSECRET=
# Access/refresh tokens are issued by the OAuth flow.
# Leave blank for first run; paste values to persist across restarts.
CARAMEL_TWITCH_ACCESSTOKEN=
CARAMEL_TWITCH_REFRESHTOKEN=
CARAMEL_TWITCH_OAUTHCALLBACKURL=http://localhost:8080/auth/twitch/callback
# Use a secure random string for session encryption
CARAMEL_TWITCH_ENCRYPTIONKEY=
# Optional: Custom reward GUID for "Message The AI" channel point redeem
CARAMEL_TWITCH_MESSAGETHEOAIREWARDID=

# Twitch Notification Configuration (used by Caramel.Service)
CARAMEL_TWITCH_NOTIF_ACCESSTOKEN=
CARAMEL_TWITCH_NOTIF_BOTUSERID=

# gRPC Client Configuration (used by API, Discord, and Twitch to reach Caramel.Service)
# For Docker: use 'caramel-service' as host (service name from compose.yaml)
# For local development: use 'localhost'
CARAMEL_GRPC_HOST=caramel-service
CARAMEL_GRPC_PORT=5270
CARAMEL_GRPC_USEHTTPS=false
CARAMEL_GRPC_APITOKEN=dev-api-token
CARAMEL_GRPC_VALIDATESSLCERTIFICATE=false

# Database Connection Strings
# For Docker: use 'pgsql' as host (service name from compose.yaml)
# For local development: use 'localhost' (ports: 5433 for Postgres, 6380 for Redis)
CARAMEL_DATABASE_CONNECTIONSTRING=Host=pgsql;Database=caramel_db;Username=caramel;Password=caramel
CARAMEL_QUARTZ_CONNECTIONSTRING=Host=pgsql;Database=caramel_db;Username=caramel;Password=caramel
CARAMEL_REDIS_CONNECTIONSTRING=redis:6379,password=caramel_redis

# AI Configuration
CARAMEL_AI_MODELID=
CARAMEL_AI_ENDPOINT=
CARAMEL_AI_APIKEY=

# OBS WebSocket Configuration
# For Docker: use host.docker.internal to reach OBS on the host machine
# For local development: use localhost
CARAMEL_OBS_URL=ws://host.docker.internal:4455
CARAMEL_OBS_PASSWORD=
